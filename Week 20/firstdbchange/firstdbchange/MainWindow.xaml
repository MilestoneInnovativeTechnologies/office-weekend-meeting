        <CheckBox x:Name="checkBox" Content="" HorizontalAlignment="Left" Margin="268,216,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Update" HorizontalAlignment="Left" Margin="119,263,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Cancel" HorizontalAlignment="Left" Margin="268,258,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
       

    </Grid>
</Window>
