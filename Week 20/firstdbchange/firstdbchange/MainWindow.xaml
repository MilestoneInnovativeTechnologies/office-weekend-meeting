        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="User" HorizontalAlignment="Left" Margin="77,25,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Server" HorizontalAlignment="Left" Margin="77,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Database" HorizontalAlignment="Left" Margin="77,123,0,0" VerticalAlignment="Top"/>
